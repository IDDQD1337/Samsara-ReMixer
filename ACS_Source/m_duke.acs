		Delay(PROTOZOID_BITE);
	}
		
	ActivatorSound("slimer/attack",127);
	DamageThing(6);
	
	for(; i < 9; i++)
	{
		bitten_num = strparam(s:"BITTEN_", d:i);
		SetHudSize(320,200,0);SetFont(bitten_num);HudMessage(s:"A"; HUDMSG_PLAIN,200+PlayerNumber(),0,0.5,0.5,0.5);	
		Delay(PROTOZOID_BITE);
	}
	
	ActivatorSound("slimer/attack",127);
	
	
	bitten_num = strparam(s:"BITTEN_", d:i);
