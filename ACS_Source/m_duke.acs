	int bitten_num;
	
	GiveInventory("GettingSlimed",1);
	ActivatorSound("slimer/attack",127);
	DamageThing(6);
	
	for(i = 0; i < 6; i++)
	{
		bitten_num = strparam(s:"BITTEN_", d:i);
